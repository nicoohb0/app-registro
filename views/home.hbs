<!-- Modal Iniciar Sesión -->
<div class="modal fade" id="modalIniciarSesion" tabindex="-1" aria-labelledby="etiquetaModalIniciar" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="etiquetaModalIniciar">Iniciar Sesión</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formularioInicio">
                    <div class="mb-3">
                        <label for="correoUsuario" class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" id="correoUsuario" required>
                    </div>
                    <div class="mb-3">
                        <label for="claveUsuario" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="claveUsuario" required>
                            <button class="btn btn-outline-secondary" type="button" id="toggleClaveUsuario">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="recordarme">
                        <label class="form-check-label" for="recordarme">Recordarme</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                </form>
                <div class="text-center mt-3">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#modalRecuperarClave"
                        data-bs-dismiss="modal">¿Olvidaste tu contraseña?</a>
                </div>
                <div class="text-center mt-3">
                    <p>¿No tienes cuenta? <a href="#" data-bs-toggle="modal" data-bs-target="#modalRegistrarse"
                            data-bs-dismiss="modal">Regístrate</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Registro -->
<div class="modal fade" id="modalRegistrarse" tabindex="-1" aria-labelledby="etiquetaModalRegistro" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="etiquetaModalRegistro">Crear una cuenta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formRegistro">
                    <div class="row mb-3">
                        <div class="col">
                            <label for="nombre" class="form-label">Nombre *</label>
                            <input type="text" class="form-control" id="nombre" pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñ\s]{1,15}$"
                                title="Solo letras (máximo 15 caracteres, sin números ni caracteres especiales)"
                                maxlength="15" required>
                            <div class="invalid-feedback" id="nombreError">
                                Solo letras, máximo 15 caracteres
                            </div>
                            <div class="form-text">Solo letras, máximo 15 caracteres</div>
                        </div>
                        <div class="col">
                            <label for="apellido" class="form-label">Apellido *</label>
                            <input type="text" class="form-control" id="apellido"
                                pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñ\s]{1,15}$"
                                title="Solo letras (máximo 15 caracteres, sin números ni caracteres especiales)"
                                maxlength="15" required>
                            <div class="invalid-feedback" id="apellidoError">
                                Solo letras, máximo 15 caracteres
                            </div>
                            <div class="form-text">Solo letras, máximo 15 caracteres</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="correoRegistro" class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" id="correoRegistro" required>
                    </div>
                    <div class="mb-3">
                        <label for="claveRegistro" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="claveRegistro" required>
                            <button class="btn btn-outline-secondary" type="button" id="toggleClaveRegistro">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="confirmarClave" class="form-label">Confirmar contraseña</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="confirmarClave" required>
                            <button class="btn btn-outline-secondary" type="button" id="toggleConfirmarClave">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="aceptarTerminos" required>
                        <label class="form-check-label" for="aceptarTerminos">Acepto los términos y
                            condiciones</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Registrarse</button>
                </form>
                <div class="text-center mt-3">
                    <p>¿Ya tienes cuenta? <a href="#" data-bs-toggle="modal" data-bs-target="#modalIniciarSesion"
                            data-bs-dismiss="modal">Inicia sesión</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

